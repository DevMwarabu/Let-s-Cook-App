<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="48dp"
    android:layout_marginRight="48dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorPrimaryDark"
            android:text="Email Request"/>
        <TextView
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:text="Your registered email is required in order to save your future favorite meals that will be accessible whenever neede. Proceed?"/>

        <Button
            android:layout_marginLeft="8dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_button_clicked"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Yes"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:id="@+id/btn.yes"/>
        <Button
            android:layout_marginLeft="8dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_button_clicked_agree"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="No"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:id="@+id/btn.no"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>